<Window x:Class="StyleDemo.ImplicitStyleDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StyleDemo"
        mc:Ignorable="d"
        Title="ImplicitStyleDemo" Height="300" Width="300">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Tomato"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Red"/>
            <Setter Property="Padding" Value="5,5,5,5"/>
        </Style>
    </Window.Resources>
    <StackPanel HorizontalAlignment="Left">
        <StackPanel x:Name="addUserForm" Margin="10">
            <Button Margin="0,0,0,10">Save</Button>

            <Button>Back</Button>
        </StackPanel>
        <StackPanel x:Name="editUserForm"  Margin="10">
            <Button >Back</Button>
        </StackPanel>
        <StackPanel x:Name="viewUserForm"  Margin="10">
            <Button>Back</Button>
        </StackPanel>
    </StackPanel>
</Window>
